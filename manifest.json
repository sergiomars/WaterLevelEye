{
  "name": "Water Level Eye",
  "description": "A simple water level app.",
  "manifest_version": 3,
  "version": "1.6",
  "action": {
    "default_icon": "resources/images/icon.png",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "background": {
    "service_worker": "js/background.js",
    "type": "module"
  },
  "host_permissions": [
    "https://www.hydrodaten.admin.ch/"
  ],
  "permissions": [
    "storage",
    "notifications"
  ]
}